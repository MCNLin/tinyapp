<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls"><b>TinyApp</b></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(user){ %>
      <form method="POST" class="form-inline" action="/logout">
        <div class="form-group mb-2">
          <h4>Logged In As: <%= user.email %>
        </h4>
        <button type="submit" class="btn btn-primary" style="margin-left: 1em;">Logout</button>
      </div>
    </form>
    <% } else { %>
      <form method="POST" class="form-inline" action="/login">
        <div class="form-group mb-2">
          <input class="form-control me-2" type="text" name="username" placeholder="username"
              style="width: 300px; margin: 1em">
            <button type="submit" class="btn btn-primary">Login</button>
          </div>
        </form>
        <% } %>

          </div>
  </nav>
  </form>
</header>